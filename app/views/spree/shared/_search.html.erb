<% @taxons = @taxon && @taxon.parent ? @taxon.parent.children : Spree::Taxon.roots %>

<%= form_tag spree.products_path, :method => :get, class: "" do %>
  
    <% cache(cache_key_for_taxons) do %>
      <%= select_tag :taxon,
            options_for_select([[Spree.t(:all_departments), '']] +
                                  @taxons.map {|t| [t.name, t.id]},
                                  @taxon ? @taxon.id : params[:taxon]), 'aria-label' => 'Taxon', class: "sbHolder", style: 'float:left; padding:4px 25px 6px 7px;'%>
    <% end %>
  
  
    <%= search_field_tag :keywords, params[:keywords], :placeholder => Spree.t(:search), class: "input-text" %>
  
  <%= button_tag(Spree.t(:search), :name => nil, class: "button") do %>
  <span><span>Search</span></span>
  <% end %>
<% end %>
